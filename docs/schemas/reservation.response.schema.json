{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://synvya.com/schemas/reservation.response.schema.json",
  "title": "Synvya Reservation Response Payload",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "status"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "confirmed",
        "declined",
        "expired",
        "cancelled"
      ]
    },
    "iso_time": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time",
      "description": "Proposed or confirmed time; null when declined/expired"
    },
    "message": {
      "type": "string",
      "maxLength": 2000
    },
    "table": {
      "type": [
        "string",
        "null"
      ],
      "description": "Optional table identifier (only for confirmed status)"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "status": {
            "const": "confirmed"
          }
        }
      },
      "then": {
        "required": [
          "iso_time"
        ]
      }
    }
  ]
}